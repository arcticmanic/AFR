{% extends '../layout/default.twig' %}

{% block content %}
  {% include '../includes/content-header-with-tags.twig' with {title: 'Сотрудничество'} %}

  <div class="container">
    <div class="md:mt-8 lg:mb-30 md:mb-20 sm:mb-16 mb-12 my-6 md:pr-8 pr-4 grid xl:row-gap-24 md:row-gap-20 row-gap-16 col-gap-12 xl:grid-cols-4 lg:grid-cols-3 sm:grid-cols-2 grid-cols-1">
      {% for item in items %}
        <a href="#" class="item group">
          <div class="relative h-64 flex items-center justify-center bg-white shifted-shadow">
            <img data-src="./assets/images/collaboration_partners-img-{{item.img}}.png" class="lazy m-auto object-contain" alt="">
            
            <div class="absolute right-0 bottom-0 p-7 ease-in-out duration-300 transform group-hover:translate-x-2">
              {% include '../svg/arrow-right-svg.twig' with {classes: "text-purple-300"} %}
            </div>
          </div>

          <div class="content md:w-5/6 pl-5 mt-6 flex flex-col">
            <h5 class="text-3xl leading-tight font-serif font-light ease-in-out duration-300 group-hover:text-purple-300">{{item.title}}</h5>
            <h6 class="text-tiny leading-tight font-serif font-light ease-in-out duration-300 group-hover:text-purple-300">{{item.subtitle}}</h6>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}
