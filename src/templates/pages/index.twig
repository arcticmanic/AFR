{% extends '../layout/index-default.twig' %}

{% block scripts %}
  <script src="./assets/js/slick.min.js" defer></script>
{% endblock %}

{% block content %}
  <div class="mt-40">
    <div class="container content-header flex flex-wrap items-center justify-between space-x-6">
