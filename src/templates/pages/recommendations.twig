{% extends '../layout/default.twig' %}

{% block content %}
  <div class="container">
    <div class="content-header flex flex-wrap items-center justify-between space-x-6">
      <h1 class="mb-4 font-serif xl:text-6xl lg:text-5xl sm:text-4xl text-3xl leading-none">Рекомендации АФР online</h1>

      <a href="#" class="mb-4 button bg-purple-300 hover:bg-purple-200 sm:py-3 flex items-center justify-between space-x-5 lg:text-base text-tiny group" data-micromodal-trigger="modal-recommendations-search">
        <span>Поиск по разделу</span>
        {% include '../svg/arrow-right-svg.twig' with {classes: "text-white ease-in-out  duration-300 transform group-hover:translate-x-1"} %}
      </a>
    </div>

    <div class="mt-6 md:mb-12 mb-6 grid gap-5 md:grid-cols-2 grid-cols-1">
      {% for item in items %}
        <a href="#" class="item relative h-64 bg-blue-900 shadow-lg ease-in-out  duration-300 hover:shadow-2xl group">
          <img data-src="./assets/images/item-bg-{{item.bg}}.png" class="lazy dimmed-img ml-auto max-h-full w-full object-cover opacity-25" alt="">

          <div class="absolute content inset-0 left-0 lg:pt-12 pt-4 lg:px-12 px-4 pb-5 flex flex-col">
            <h5 class="md:w-1/2 lg:text-3xl sm:text-2xl text-xl leading-tight font-serif font-light">{{item.title}}</h5>
            <div class="mt-auto py-3 max-w-fit flex items-center justify-between space-x-3 text-tiny group">
              <span>Подробнее</span>
              {% include '../svg/arrow-right-svg.twig' with {classes: "text-purple-300 ease-in-out  duration-300 transform group-hover:translate-x-3"} %}
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}


{% block afterFooter %}
  {% embed '../includes/modal-side_big.twig' with {id: 'modal-recommendations-search', classes: 'modal-side_bigger'} %}
    {% block content %}
      <div class="h-full flex flex-col">
        <h2 class="mb-10 font-serif text-6xl text-gray-900">Поиск по разделу</h2>

        <form class="relative w-full mr-4 text-gray-900">
          <input class="w-full py-1 px-5 bg-blue-100 border border-solid border-purple-300 border-opacity-10 rounded-full text-md placeholder-gray-500 focus:outline-none focus:shadow-outline" type="text" value="Процесс">

          <button type="submit" class="absolute inset-y-0 right-0 flex items-center justify-between px-5 focus:outline-none focus:shadow-outline rounded-full">
            {% include '../svg/icon-search-svg.twig' with {classes: 'text-purple-300 stroke-current'} %}
          </button>

          <span class="absolute sm:top-50 top-3 right-0 sm:mr-12 mr-1 sm:mb-0 text-purple-300 text-opacity-50">Найдено <span class="font-bold">22</span> совпадения</span>

        </form>

        <a href="#" class="button mt-auto mb-3 px-3 bg-purple-300 space-x-4 group" data-micromodal-close>
          <span class="pointer-events-none">Вернуться к рекомендациям</span>
          {% include '../svg/arrow-right-svg.twig' with {classes: 'text-white ease-in-out  duration-300 transform pointer-events-none group-hover:translate-x-1'} %}
        </a>
      </div>
    {% endblock %}
  {% endembed %}
{% endblock %}